include ../../mixins/pug/svg-icon
block variables
    -
        let baseDir = './';

doctype html
html(lang="en")
    //- Include head
    include ./head

    body(class=pageClass)
        .page
            .page__content
                //- Include header
                include ../../components/header/header

                block top-position

                .container
                    .row
                        block columns

                block bottom-position

            //- Include footer
            include ../../components/footer/footer

        a.go-top.go-top--js(href='#')
            +icon('arrow-up')

        script(src=`${baseDir}js/main.js`)

        block script
